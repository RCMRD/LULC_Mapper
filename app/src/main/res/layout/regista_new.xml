<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_gravity="top"
    android:orientation="vertical" >

    
    
    
    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#66000000"
        android:text="@string/reggo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />
    
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_weight="1"
        >
    
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textIL1"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines = "1"
                android:hint="@string/fulnem"
                android:ems="10"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textIL2"
            android:layout_alignLeft="@+id/textIL1"
            android:layout_below="@+id/textIL1"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/uphoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines = "1"
                android:maxLength="10"
                android:inputType="phone"
                android:hint="@string/fono"
                android:ems="10"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textIL3"
            android:layout_alignLeft="@+id/textIL2"
            android:layout_below="@+id/textIL2"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/uemailo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines = "1"

                android:inputType="textEmailAddress"
                android:hint="@string/emailad"
                android:ems="10"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textIL4"
            android:layout_alignLeft="@+id/textIL3"
            android:layout_below="@+id/textIL3"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/uorgo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines = "1"

                android:inputType="text"
                android:hint="@string/orgaa"
                android:ems="10"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textIL5"
            android:layout_alignLeft="@+id/textIL4"
            android:layout_below="@+id/textIL4"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/urolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines = "1"

                android:inputType="text"
                android:hint="@string/rolee"
                android:ems="10"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textIL6"
            android:layout_alignLeft="@+id/textIL5"
            android:layout_below="@+id/textIL5"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/upasso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines = "1"

                android:inputType="textPassword"
                android:hint="password"
                android:ems="10"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textIL7"
            android:layout_alignLeft="@+id/textIL6"
            android:layout_below="@+id/textIL6"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/upasso2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines = "1"

                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:ems="10"
                />
        </android.support.design.widget.TextInputLayout>




    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textIL8"
        android:layout_alignLeft="@+id/textIL7"
        android:layout_below="@+id/textIL7"
        android:text="@string/countrii" />
    
    <TextView
        android:id="@+id/textView333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textIL8"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textIL7"
        android:textColor="#000000"
        android:textStyle="bold"
         />


    </RelativeLayout>
    
    </ScrollView>

       <RelativeLayout 
        android:layout_width="match_parent"
           android:layout_marginTop="5dp"
           android:layout_gravity="bottom|center_horizontal"
        android:layout_height="wrap_content"
        >

    
   <!-- <Button
        android:id="@+id/rback"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/comlinee"
        android:text="@string/rback"
        android:textColor="@android:color/background_light" />-->
    
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/comlinee"
        android:layout_margin="10dp"
        android:text="@string/regista"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />
    </RelativeLayout>

    
</LinearLayout>
